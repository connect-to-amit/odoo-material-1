<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="snippet_block_opt" name="Snippet Block Options" inherit_id="website.snippet_options">
            <xpath expr="//div[@data-js='background']" position="after">
                <div data-selector=".block"> <!-- Options group -->
                    <li class="dropdown-submenu">
                        <a href="#">Custom</a>
                        <ul class="dropdown-menu"> <!-- Options list -->
                            <li data-select_class="">
                                <a>Default</a>
                            </li>
                            <li data-select_class="block-inverse">
                                <a>Inverse</a>
                            </li>
                            <li data-select_class="block-shaded">
                                <a>Shaded</a>
                            </li>
                        </ul>
                    </li>
                </div>
            </xpath>
        </template>
    </data>
</openerp>