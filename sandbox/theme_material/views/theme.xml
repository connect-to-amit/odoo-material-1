<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="theme_customize" inherit_id="website.theme_customize" name="theme_customize Material">
            <xpath expr="div" position="replace">

                <div id="theme_customize_modal" class="modal fade bs-example-modal-sm">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="loading_backdrop"/>
                            <div class="modal-header">
                                <button type="button" class="close">Ã—</button>
                                <h4 class="modal-title">Customize your theme</h4>
                            </div>
                            <div class="modal-body">
                                <table>
                                    <tr>
                                        <td>
                                            <label class="checked">
                                                <img style="width: 120px; height: 70px;"
                                                     src="/theme_material/static/src/img/material_default_thumbnail.png"
                                                     alt="Default Theme"/>
                                                <input name="theme" type="radio" data-xmlid="" checked="checked"/>
                                            </label>
                                        </td>
                                        <td>
                                            <label>
                                                <img style="width: 120px; height: 70px;"
                                                     src="/theme_material/static/src/less/agrista/thumbnail.png"
                                                     alt="Agrista Theme"/>
                                                <input name="theme" type="radio"
                                                       data-xmlid="theme_material.theme_agrista"/>
                                            </label>
                                        </td>
                                        <td>
                                            <label>
                                                <img style="width: 120px; height: 70px;"
                                                     src="/theme_material/static/src/less/taproot/thumbnail.png"
                                                     alt="Taproot"/>
                                                <input name="theme" type="radio"
                                                       data-xmlid="theme_material.theme_taproot"/>
                                            </label>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </template>

