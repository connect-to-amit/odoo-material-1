        <template id="ag_masthead" inherit_id="website.snippets" name="Agrista Masthead">
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div>
                    <!-- Thubnail -->
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/website/static/src/img/blocks/block_jumbotron.png"/>
                        <span class="oe_snippet_thumbnail_title">Ag Masthead</span>
                    </div>
                    <!-- Snippet Body -->
                    <section class="oe_snippet_body">
                        <div class="ag-masthead">
                            <div class="container">
                                <div class="ag-masthead-caption">
                                    <h1>Manage your farm finances better, together.</h1>
                                    <h2>Powerful financial resource planning tools for farm operators.</h2>
                                    <p>Securely manage your risk reserves, cash flows, and profit margins in one
                                        convenient place.
                                    </p>
                                    <p>
                                        <a class="btn btn-lg btn-primary" href="/page/website.contactus" role="button">
                                            Contact us
                                        </a>
                                    </p>

                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
        </template>
