<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <template id="header_carousel" name="Carousel Header">
            <!-- carousel -->
            <div id="carousel-header" class="carousel slide">

                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-header" data-slide-to="0" class="active"/>
                    <li data-target="#carousel-header" data-slide-to="1"/>
                    <li data-target="#carousel-header" data-slide-to="2"/>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">

                    <!-- First slide -->
                    <div class="item active">
                        <img src="/theme_material/static/src/img/demo/hp-01.jpg" alt="Image 1"/>
                        <div class="carousel-caption">
                            <h1>This is the caption for slide 1</h1>
                            <p>This is the caption for slide 1</p>
                        </div>
                    </div>
                    <!-- /.item -->

                    <!-- Second slide -->
                    <div class="item">
                        <img src="/theme_material/static/src/img/demo/hp-02.jpg" alt="Image 2"/>
                        <div class="carousel-caption">
                            <h1>This is the caption for slide 2</h1>
                            <p>This is the caption for slide 2</p>
                        </div>
                    </div>
                    <!-- /.item -->

                    <!-- Third slide -->
                    <div class="item">
                        <img src="/theme_material/static/src/img/demo/hp-04.jpg" alt="Image 3"/>
                        <div class="carousel-caption">
                            <h1>This is the caption for slide 3</h1>
                            <p>This is the caption for slide 3</p>
                        </div>
                    </div>
                    <!-- /.item -->

                </div>
                <!-- /.carousel-inner -->

                <!-- Controls -->
                <a class="left carousel-control new-control" href="#carousel-header" role="button"
                   data-slide="prev">
                    <i class="material-icons waves-effect waves-light">chevron_left</i>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control new-control" href="#carousel-header" role="button"
                   data-slide="next">
                    <i class="material-icons waves-effect waves-light">chevron_right</i>
                    <span class="sr-only">Previous</span>
                </a>

            </div>
            <!-- /.carousel -->
        </template>
    </data>
</openerp>